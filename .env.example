# ============================================
# BINANCE API CONFIGURATION
# ============================================

# Binance Futures API Base URL
# For testnet use: https://testnet.binancefuture.com
BINANCE_BASE_URL=https://fapi.binance.com

# API credentials (not required for public market data endpoints)
# Leave empty for now, add later if you need authenticated endpoints
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# ============================================
# SUPPORTED MARKETS CONFIGURATION
# ============================================

# Comma-separated list of trading pairs to support
# These are the symbols we'll fetch data for
SUPPORTED_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# Comma-separated list of candlestick intervals
# Binance supports: 1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 6h, 8h, 12h, 1d, 3d, 1w, 1M
SUPPORTED_INTERVALS=1m,5m,15m,1h,4h,1d

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# FastAPI application settings
APP_HOST=0.0.0.0
APP_PORT=8000

# Environment mode (development, production)
ENVIRONMENT=development

# Enable debug logging
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# DEBUG: Detailed diagnostic information
# INFO: General informational messages (recommended for development)
# WARNING: Warning messages for potentially harmful situations
# ERROR: Error messages for serious problems
# CRITICAL: Critical messages for very serious errors
LOG_LEVEL=INFO

# ============================================
# RATE LIMITING & PERFORMANCE
# ============================================

# Maximum requests per second to Binance API (to avoid rate limits)
# Binance allows 1200 requests per minute = 20 per second
MAX_REQUESTS_PER_SECOND=10

# Connection timeout in seconds
REQUEST_TIMEOUT=30

# WebSocket reconnection settings
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10

# ============================================
# TRADING CONFIGURATION
# ============================================

# Minimum USD value for a trade to be considered "large"
# Large trades may indicate institutional or whale activity
# Default: $100,000 USD
LARGE_TRADE_THRESHOLD_USD=100000

# ============================================
# CACHING CONFIGURATION (Future Use)
# ============================================

# Redis connection (leave empty for in-memory cache)
REDIS_HOST=
REDIS_PORT=6379
REDIS_DB=0

# Cache TTL in seconds
CACHE_TTL=60
